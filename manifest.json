{
    "manifest_version": 3,
    "name": "Clarify",
    "version": "1.0",
    "description": "Make websites easier to read or study",
    "permissions": ["activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
