{
    "manifest_version": 3,
    "name": "Clarify",
    "version": "1.0.0",
    "description": "Simplify online learning with AI-powered tools for text simplification, pronunciation, and more.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "contextMenus"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
    
  }
  